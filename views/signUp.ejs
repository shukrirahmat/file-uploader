<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%=title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <%- include("partials/header.ejs") %>
  <div class="main">
    <form class="signUpForm" action="/sign-up" method="post">
      <%- include("partials/signUpErrors.ejs") %>
      <div>
        <label for="username">USERNAME <span>(Only letters, numbers and underscores)</span></label>
        <input type="text" id="username" name="username">
      </div>
      <div>
        <label for="password">PASSWORD <span>(6 characters minimum)</span></label>
        <input type="password" id="password" name="password">
      </div>
      <div>
        <label for="password2">CONFIRM PASSWORD</label>
        <input type="password" id="password2" name="password2">
      </div>
      <button>SIGN UP</button>
    </form>
  </div>
  <%- include("partials/footer.ejs") %>
</body>

</html>